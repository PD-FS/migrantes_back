<p id="notice"><%= notice %></p>

<h1>Needs</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Request element</th>
      <th>Given element</th>
      <th>Is complete</th>
      <th>Donation category</th>
      <th>Enterprise</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @needs.each do |need| %>
      <tr>
        <td><%= need.Description %></td>
        <td><%= need.request_element %></td>
        <td><%= need.given_element %></td>
        <td><%= need.is_complete %></td>
        <td><%= need.donation_category_id %></td>
        <td><%= need.enterprise_id %></td>
        <td><%= link_to 'Show', need %></td>
        <td><%= link_to 'Edit', edit_need_path(need) %></td>
        <td><%= link_to 'Destroy', need, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

